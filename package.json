{
    "name": "@ironcorelabs/ironhide",
    "description": "Tool to easily encrypt and decrypt files to users and groups. Similar to GPG, but usable at scale.",
    "version": "0.7.1",
    "author": "IronCore Labs",
    "repository": "https://github.com/IronCoreLabs/ironhide",
    "homepage": "https://github.com/IronCoreLabs/ironhide",
    "license": "MIT",
    "engines": {
        "node": ">=14.0.0"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "cpu": [
        "x64",
        "arm64"
    ],
    "bin": {
        "ironhide": "./bin/run"
    },
    "files": [
        "/bin",
        "/lib",
        "oclif.manifest.json"
    ],
    "main": "index.js",
    "scripts": {
        "postpack": "rm -f oclif.manifest.json",
        "prepack": "yarn test && rm -rf lib && rm -rf tsconfig.tsbuildinfo && tsc -b && oclif manifest",
        "lint": "eslint -c .eslintrc.js src/**/*.ts",
        "unit": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
        "test": "yarn run lint && yarn run unit",
        "start": "node bin/run",
        "checkcov": "nyc check-coverage --lines 80 --functions 80 --branches 70"
    },
    "dependencies": {
        "@ironcorelabs/ironnode": "0.9.1",
        "@oclif/core": "^1.3.0",
        "@oclif/errors": "^1.3.5",
        "@oclif/plugin-help": "5.1.10",
        "@oclif/plugin-not-found": "2.3.1",
        "@oclif/plugin-warn-if-update-available": "2.0.4",
        "chalk": "4.1.0",
        "cli-table3": "0.6.1",
        "node-fetch": "3.2.0",
        "open": "8.4.0",
        "tslib": "2.3.1",
        "wrap-ansi": "8.0.1"
    },
    "devDependencies": {
        "@oclif/test": "^2",
        "@types/chai": "^4.3.0",
        "@types/chai-as-promised": "^7.1.3",
        "@types/mocha": "^9",
        "@types/node": "^16",
        "@types/wrap-ansi": "^8.0.1",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/eslint-plugin-tslint": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "chai": "^4",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.8.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsdoc": "^37.7.0",
        "eslint-plugin-oclif": "^0.1.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-sonarjs": "^0.11.0",
        "eslint-plugin-unicorn": "^40.1.0",
        "globby": "^13",
        "mocha": "^9",
        "nock": "^13.2.2",
        "nyc": "^15",
        "oclif": "^2.4.2",
        "sinon": "^13",
        "sonarjs": "^1.0.0",
        "source-map-support": "^0.5.21",
        "ts-node": "^10",
        "typescript": "^4.5.5"
    },
    "oclif": {
        "additionalHelpFlags": [
            "-h"
        ],
        "additionalVersionFlags": [
            "-v"
        ],
        "topicSeparator": " ",
        "commands": "./lib/commands",
        "hooks": {
            "prerun": [
                "./lib/hooks/initializeSDK",
                "./lib/hooks/checkArgumentSize"
            ]
        },
        "topics": {
            "help": {
                "description": "Display help information."
            },
            "file": {
                "description": "Encrypt and decrypt files, display information about encrypted files, and grant or revoke access to encrypted files."
            },
            "group": {
                "description": "Manage your cryptographic groups. Display groups you're a part of, create new groups, and manage group admins and members."
            },
            "user": {
                "description": "Manage your devices and retrieve information about other users."
            }
        },
        "bin": "ironhide",
        "plugins": [
            "@oclif/plugin-help",
            "@oclif/plugin-not-found",
            "@oclif/plugin-warn-if-update-available"
        ],
        "warn-if-update-available": {
            "timeoutInDays": 7
        }
    },
    "prettier": {
        "printWidth": 160,
        "tabWidth": 4,
        "trailingComma": "es5",
        "bracketSpacing": false,
        "jsxBracketSameLine": true,
        "arrowParens": "always"
    },
    "mocha": {
        "recursive": true,
        "reporter": "spec",
        "timeout": 5000,
        "watchExtensions": [
            "ts"
        ],
        "require": "ts-node/register"
    }
}
